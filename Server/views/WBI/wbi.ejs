    <!-- Modals -->

    <!-- Formulario Inclusao -->
    <div class="modal fade painelForm" id="modalIncluir" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Novo WBI:</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
            <form id="formWBI" name="formWBI" action="/wbi/incluir" method="POST">
              <div class="modal-body">

               
                     
                  <div class="row">
                    <div class="input-field col s12">
                     
                      <input  id="nome" name="nome" type="text" class="validate">
                      <label class="active" for="nome">Descrição</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                     
                      <input  id="titulo" name="titulo" type="text" class="validate">
                      <label class="active" for="titulo">Título</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      <textarea  id="dados" name="dados" class="materialize-textarea" rows="8"></textarea>
                      <label class="active" for="sql">SQL</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                     
                      <input  id="width" name="width" type="text" value="400" class="validate">
                      <label class="active" for="width">Largura</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                     
                      <input  id="height" name="height" type="text"  value="300" class="validate">
                      <label class="active" for="width">Altura</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                     
                   
                      <select class="custom-select" id="chartType" name="chartType">
                        <option selected>Escolher...</option>
                        <option value="BarChart">Barra</option>
                        <option value="LineChart">Linha</option>
                        <option value="PieChart">Pizza</option>
                        <option value="Gauge">Velocimetro</option>
                      </select>

                      <label class="active" for="chartType">Tipo Indicador</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                     
                      <input  id="options" name="options" type="text" value="" class="validate">
                      <label class="active" for="options">Opções</label>
                    </div>
                  </div>
                  
              </div>
            </form>
            <div class="modal-footer">
              <div class="row container">
                  <div  class="col-6 center-align"> 
                    <span id="divMsg" class="flow-text deep-orange-text text-darken-4"></span>
                </div>
                <div class="col-3">
                
                  <button type="button" name="segundo" id="segundo" data-dismiss="modal" class="close btn btn-secondary" >Sair</button>

                </div>
                <div  class="col-3">
                  <button id="gravar" type='button' class="btn btn-primary">Gravar </button>
                </div>

              </div>
              
            
              
            </div>
          
        </div>
