    <!-- Formulário de Edição  -->
    <div class="modal fade painelForm" id="modalEditar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Editar WBI:</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
            <form id="formEdicaoWBI" name="formEdicaoWBI" action="/wbi/alterar" method="POST">
              <div class="modal-body">


                     
                  <div class="row">
                    <div class="input-field col s12">
                     <span for="first_name">Descrição:</span>
                     <input  id="id" name="id" type="hidden" ">
                      <input  id="nome" name="nome" type="text" class="validate">
                      
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      <span for="first_name">Título:</span>
                      <input  id="titulo" name="titulo" type="text" class="validate">
                      
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      <span for="first_name">SQL:</span>
                      <textarea  id="dados" name="dados"  rows="8"></textarea>
                      
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      <span for="first_name">Largura:</span>
                      <input  id="width" name="width" type="text"  class="validate">
                      
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      <span for="first_name">Altura:</span>
                      <input  id="height" name="height" type="text"   class="validate">
                      
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                     
                      <span for="first_name">Tipo Indicador:</span>
                      <select class="custom-select" id="chartType" name="chartType">
                        <option selected>Escolher...</option>
                        <option value="BarChart">Barra</option>
                        <option value="LineChart">Linha</option>
                        <option value="PieChart">Pizza</option>
                        <option value="Gauge">Velocimetro</option>
                      </select>

                      
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      <span for="first_name">Opções:</span>
                      <textarea rows="8" id="options" name="options" type="text" value="" class="validate"></textarea>
                      
                    </div>
                  </div>
                  
              </div>
            </form>
            <div class="modal-footer">
              <div class="row container">
                  <div  class="col-6 center-align"> 
                    <span id="divMsg" class="flow-text deep-orange-text text-darken-4"></span>
                </div>
                <div class="col-3">
                
                  <button type="button" name="segundo" id="segundo" data-dismiss="modal" class="close btn btn-secondary" >Sair</button>

                </div>
                <div  class="col-3">
                  <button id="gravarEdicao" type='button' class="btn btn-primary" onclick="alteracaoWBI()">Gravar </button>
                </div>

              </div>
              
            
              
            </div>
          
        </div>
      </div>
